<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mobile.ui.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_home_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_home_to_changeRequests"
            app:destination="@id/changeRequestsReviewFragment" />
    </fragment>

    <fragment
        android:id="@+id/blockFragment"
        android:name="com.example.mobile.ui.fragments.BlockUsersFragment"
        android:label="Blocks"
        tools:layout="@layout/fragment_block_users">
        <action
            android:id="@+id/action_block_to_profile"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_block_to_changeRequests"
            app:destination="@id/changeRequestsReviewFragment" />
    </fragment>


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mobile.ui.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_forgotPassword"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_login_to_profile"
            app:destination="@id/userProfileFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_login_to_rideHistory"
            app:destination="@id/rideHistoryFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_driverHome"
            app:destination="@id/driverHomeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_passengerHome"
            app:destination="@id/passengerHomeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/driverHomeFragment"
        android:name="com.example.mobile.ui.fragments.driver.home.DriverHomeFragment"
        android:label="Driver Home"
        tools:layout="@layout/fragment_driver_home" />

    <fragment
        android:id="@+id/driverRideTrackingFragment"
        android:name="com.example.mobile.ui.fragments.driver.home.components.DriverRideTrackingFragment"
        android:label="Ride Tracking"
        tools:layout="@layout/fragment_driver_ride_tracking">
        <argument
            android:name="ride_id"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/passengerHomeFragment"
        android:name="com.example.mobile.ui.fragments.passenger.home.PassengerHomeFragment"
        android:label="Passenger Home"
        tools:layout="@layout/fragment_passenger_home">
        <action
            android:id="@+id/action_passengerHome_to_chat"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_out_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/driverHomeFragment"
        android:name="com.example.mobile.ui.fragments.driver.home.DriverHomeFragment"
        android:label="Driver Home"
        tools:layout="@layout/fragment_driver_home">
        <action
            android:id="@+id/action_driverHome_to_chat"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_out_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/rideHistoryFragment"
        android:name="com.example.mobile.ui.fragments.RideHistoryFragment"
        android:label="Ride History"
        tools:layout="@layout/fragment_ride_history">
        <action
            android:id="@+id/action_rideHistory_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_to_rideRatingFragment"
            app:destination="@id/rideRatingFragment" />
    </fragment>

    <fragment
        android:id="@+id/rideRatingFragment"
        android:name="com.example.mobile.ui.fragments.RideRatingFragment"
        android:label="Rate Ride"
        tools:layout="@layout/fragment_ride_rating">
        <argument
            android:name="ride_id"
            app:argType="long" />
        <argument
            android:name="driver_name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/passengerRideTrackingFragment"
        android:name="com.example.mobile.ui.fragments.passenger.home.components.PassengerRideTrackingFragment"
        android:label="Track Ride"
        tools:layout="@layout/fragment_passenger_ride_tracking">
        <argument
            android:name="ride_id"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/adminDriverRegistrationFragment"
        android:name="com.example.mobile.ui.fragments.AdminDriverRegistrationFragment"
        android:label="@string/admin_driver_fragment_label"
        tools:layout="@layout/fragment_admin_driver_registration">
        <action
            android:id="@+id/action_driverRegister_to_profile"
            app:destination="@id/userProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/passwordSetupFragment"
        android:name="com.example.mobile.ui.fragments.PasswordSetupFragment"
        android:label="Password Setup"
        tools:layout="@layout/fragment_password_setup">
        <deepLink app:uri="http://10.0.2.2:4200/password-setup?token={registrationToken}" />
        <deepLink app:uri="http://localhost:4200/password-setup?token={registrationToken}" />
        <argument
            android:name="registrationToken"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_passwordSetup_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.mobile.ui.fragments.UserProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_user_profile">
        <action
            android:id="@+id/action_profile_to_change_password"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_profile_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profile_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_profile_to_block"
            app:destination="@id/blockFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mobile.ui.fragments.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.mobile.ui.fragments.ForgotPasswordFragment"
        android:label="Forgot Password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPassword_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_forgotPassword_to_reset"
            app:destination="@id/resetPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.mobile.ui.fragments.ResetPasswordFragment"
        android:label="Reset Password"
        tools:layout="@layout/fragment_reset_password">
        <deepLink app:uri="http://10.0.2.2:4200/reset-password?token={token}" />
        <deepLink app:uri="http://localhost:4200/reset-password?token={token}" />
        <argument
            android:name="token"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_resetPassword_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.mobile.ui.fragments.ChangePasswordFragment"
        android:label="Change Password"
        tools:layout="@layout/fragment_change_password" />

    <fragment
        android:id="@+id/changeRequestsReviewFragment"
        android:name="com.example.mobile.ui.fragments.ChangeRequestsReviewFragment"
        android:label="Profile Change Requests"
        tools:layout="@layout/fragment_change_requests_review" />

    <fragment
        android:id="@+id/pricelistFragment"
        android:name="com.example.mobile.ui.fragments.PricelistFragment"
        android:label="Pricelist"
        tools:layout="@layout/fragment_pricelist" />

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.mobile.ui.fragments.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="current_user_id"
            app:argType="long" />
        <argument
            android:name="other_user_id"
            app:argType="long" />
        <argument
            android:name="other_user_name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/adminConversationListFragment"
        android:name="com.example.mobile.ui.fragments.AdminConversationListFragment"
        android:label="Support Chats"
        tools:layout="@layout/fragment_admin_conversation_list" />

</navigation>