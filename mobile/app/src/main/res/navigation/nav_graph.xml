<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/driverHistoryFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mobile.ui.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />

    </fragment>

    <fragment
        android:id="@+id/driverHistoryFragment"
        android:name="com.example.mobile.ui.fragments.RideHistory"
        android:label="Ride History"
        tools:layout="@layout/fragment_ride_history">

        <!-- Add actions if you need to navigate to other fragments -->
        <action
            android:id="@+id/action_driverHistory_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
    android:id="@+id/registerFragment"
    android:name="com.example.mobile.ui.fragments.RegisterFragment"
    android:label="RegisterFragment"
    tools:layout="@layout/fragment_register" />

</navigation>