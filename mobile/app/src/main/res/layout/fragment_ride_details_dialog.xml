<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/base_900"
            android:layout_marginBottom="12dp" />

        <!-- ROUTE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route"
            android:textStyle="bold"
            android:textColor="@color/base_600" />

        <TextView
            android:id="@+id/tvDetailRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/base_900"
            android:layout_marginBottom="10dp"
            tools:text="Bulevar Oslobođenja 12 → Trg Slobode 3" />

        <!-- DATE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textColor="@color/base_600" />

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_900"
            android:layout_marginBottom="10dp"
            tools:text="2026-01-27" />

        <!-- TIME ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="04:58" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="05:10" />
            </LinearLayout>

        </LinearLayout>

        <!-- DURATION/DISTANCE ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="12 min" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="3.1 km" />
            </LinearLayout>

        </LinearLayout>

        <!-- PRICE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:textColor="@color/base_600" />

        <TextView
            android:id="@+id/tvDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/deep_700"
            android:layout_marginBottom="10dp"
            tools:text="570.20 RSD" />

        <!-- STATUS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textColor="@color/base_600" />

        <TextView
            android:id="@+id/tvDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/base_700"
            android:layout_marginBottom="10dp"
            tools:text="FINISHED" />

        <!-- PASSENGER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passenger"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailPassengerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="Putnica Putnic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailPassengerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="+38141414141" />
            </LinearLayout>
        </LinearLayout>

        <!-- RATING CARD -->
        <LinearLayout
            android:id="@+id/ratingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:background="#FFF8E1"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passenger Rating"
                android:textStyle="bold"
                android:textColor="#E67E22"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvDriverRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_900"
                tools:text="Driver: ★★★★★" />

            <TextView
                android:id="@+id/tvVehicleRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_900"
                tools:text="Vehicle: ★★★★☆" />
        </LinearLayout>

        <!-- COMMENT -->
        <LinearLayout
            android:id="@+id/notesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textStyle="bold"
                android:textColor="@color/base_600"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvDetailNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/base_900"
                tools:text="very good" />
        </LinearLayout>

        <!-- CLOSE -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/base_600" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
