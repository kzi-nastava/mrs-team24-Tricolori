<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/base_900"
            android:layout_marginBottom="12dp" />

        <!-- ROUTE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route"
            android:textStyle="bold"
            android:textColor="@color/base_600" />

        <TextView
            android:id="@+id/tvDetailRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/base_900"
            android:layout_marginBottom="12dp"
            tools:text="Bulevar Oslobođenja 12 → Trg Slobode 3" />

        <!-- MAP -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="12dp">

            <org.osmdroid.views.MapView
                android:id="@+id/rideMap"
                android:layout_width="match_parent"
                android:layout_height="240dp" />

        </androidx.cardview.widget.CardView>

        <!-- TIME ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="04:58" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="05:10" />
            </LinearLayout>

        </LinearLayout>

        <!-- DURATION / DISTANCE ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="12 min" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="3.1 km" />
            </LinearLayout>

        </LinearLayout>

        <!-- PRICE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:textColor="@color/base_600" />

        <TextView
            android:id="@+id/tvDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/deep_700"
            android:layout_marginBottom="10dp"
            tools:text="570.20 RSD" />

        <!-- STATUS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textColor="@color/base_600" />

        <TextView
            android:id="@+id/tvDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/base_700"
            android:layout_marginBottom="10dp"
            tools:text="FINISHED" />

        <!--
            PERSON ROW — generic IDs used by both roles:
              Driver view  → label="Passenger", name=passengerName, phone=passengerPhone
              Passenger view → label="Driver",    name=driverName,    phone=driverPhone
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Dynamic label: "Passenger" or "Driver" -->
                <TextView
                    android:id="@+id/tvDetailPersonLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/base_600"
                    tools:text="Passenger" />

                <TextView
                    android:id="@+id/tvDetailPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="John Doe" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textStyle="bold"
                    android:textColor="@color/base_600" />

                <TextView
                    android:id="@+id/tvDetailPersonPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="+38141414141" />
            </LinearLayout>
        </LinearLayout>

        <!--
            VEHICLE CONTAINER — shown only in passenger view.
            Hidden (gone) in driver view via bindDriverData().
        -->
        <androidx.cardview.widget.CardView
            android:id="@+id/vehicleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:radius="8dp"
            android:visibility="gone"
            tools:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F5F5F5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle"
                        android:textStyle="bold"
                        android:textColor="@color/base_600" />

                    <TextView
                        android:id="@+id/tvDetailVehicleModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_900"
                        tools:text="Toyota Corolla" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plate"
                        android:textStyle="bold"
                        android:textColor="@color/base_600" />

                    <TextView
                        android:id="@+id/tvDetailVehiclePlate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_900"
                        tools:text="NS-123-AB" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- RATING CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ratingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:radius="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#FFF8E1">

                <!--
                    Dynamic label:
                      Driver view      → "Passenger Rating"
                      Passenger view   → "Your Rating"
                -->
                <TextView
                    android:id="@+id/tvRatingSectionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#E67E22"
                    android:layout_marginBottom="6dp"
                    tools:text="Passenger Rating" />

                <TextView
                    android:id="@+id/tvDriverRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="Driver: ★★★★★" />

                <TextView
                    android:id="@+id/tvVehicleRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="Vehicle: ★★★★☆" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- COMMENT CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/notesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:radius="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#EEEEEE">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textStyle="bold"
                    android:textColor="@color/base_600"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvDetailNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_900"
                    tools:text="very good" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--
            RATE THIS RIDE — shown only for passenger when ride is FINISHED
            and not yet rated. Hidden via bindDriverData() for driver.
        -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRateRide"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Rate this Ride"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="gone"
            app:backgroundTint="@color/deep_700"
            app:cornerRadius="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

        <!-- CLOSE -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/base_600"
            app:cornerRadius="8dp"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>