<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule time"
        android:textSize="22sp"
        android:textColor="@color/deep_700"
        android:gravity="center"
        android:padding="20dp"
        android:fontFamily="sans-serif"/>

    <!-- Quick slots panel -->
    <LinearLayout
        android:id="@+id/panelQuickSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predefined timeslots"
            android:textSize="16sp"
            android:textColor="@color/gray_400"
            android:paddingStart="20dp"
            android:paddingBottom="8dp"/>

        <GridView
            android:id="@+id/gridTimeSlots"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:numColumns="2"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clipToPadding="false"
            android:scrollbars="none"/>
    </LinearLayout>

    <!-- Custom time panel -->
    <LinearLayout
        android:id="@+id/panelCustomTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter preferred time:"
            android:textColor="@color/gray_400"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="clock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select any time within the next 5 hours."
            android:textColor="@color/gray_400"
            android:textSize="13sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <Button
            android:id="@+id/btnToggleMode"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Enter time manually"
            android:backgroundTint="@color/deep_300"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/spacing_1"
            app:cornerRadius="16dp"
            android:stateListAnimator="@null"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnConfirmTime"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Confirm Pickup Time"
            android:backgroundTint="@color/deep_400"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:enabled="false"
            app:cornerRadius="16dp"
            android:stateListAnimator="@null"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>
