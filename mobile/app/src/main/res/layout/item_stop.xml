<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvStopLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_400"
        android:textSize="14sp"
        android:paddingStart="8dp"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeColor="@color/gray_200"
            app:startIconDrawable="@drawable/bg_dot_base"
            app:startIconTint="@null"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter stop address"
                android:inputType="text"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemoveStop"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/deep_300"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:iconTint="@color/white" />
    </LinearLayout>
</LinearLayout>
