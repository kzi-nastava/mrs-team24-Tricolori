<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".ui.fragments.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_4"
        android:paddingTop="@dimen/spacing_16"
        android:paddingEnd="@dimen/spacing_4"
        android:paddingBottom="@dimen/spacing_4"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/change_password_title"
            android:textColor="@color/light_700"
            android:textSize="@dimen/text_4xl"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_8"
            android:text="@string/change_password_desc"
            android:textColor="@color/gray_500"
            android:textSize="@dimen/text_sm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Current password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_2"
                android:text="@string/change_password_current"
                android:textColor="@color/base_800"
                android:textSize="@dimen/text_sm"
                android:labelFor="@id/change_password_current"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_1"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="@dimen/spacing_2"
                app:boxCornerRadiusBottomStart="@dimen/spacing_2"
                app:boxCornerRadiusTopEnd="@dimen/spacing_2"
                app:boxCornerRadiusTopStart="@dimen/spacing_2"
                app:boxStrokeColor="@color/base_600"
                app:boxStrokeWidth="1dp"
                app:hintEnabled="false"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/gray_400"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/gray_400"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/change_password_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/change_password_current_input"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/spacing_3"
                    android:paddingBottom="@dimen/spacing_3"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/text_base"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- New password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:layout_marginBottom="@dimen/spacing_2"
                android:text="@string/change_password_new"
                android:textColor="@color/base_800"
                android:textSize="@dimen/text_sm"
                android:labelFor="@id/change_password_new"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_1"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="@dimen/spacing_2"
                app:boxCornerRadiusBottomStart="@dimen/spacing_2"
                app:boxCornerRadiusTopEnd="@dimen/spacing_2"
                app:boxCornerRadiusTopStart="@dimen/spacing_2"
                app:boxStrokeColor="@color/base_600"
                app:boxStrokeWidth="1dp"
                app:hintEnabled="false"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/gray_400"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/gray_400"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/change_password_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/change_password_new_input"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/spacing_3"
                    android:paddingBottom="@dimen/spacing_3"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/text_base"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:layout_marginBottom="@dimen/spacing_2"
                android:text="@string/change_password_confirm"
                android:textColor="@color/base_800"
                android:textSize="@dimen/text_sm"
                android:labelFor="@id/change_password_confirm"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_1"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="@dimen/spacing_2"
                app:boxCornerRadiusBottomStart="@dimen/spacing_2"
                app:boxCornerRadiusTopEnd="@dimen/spacing_2"
                app:boxCornerRadiusTopStart="@dimen/spacing_2"
                app:boxStrokeColor="@color/base_600"
                app:boxStrokeWidth="1dp"
                app:hintEnabled="false"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/gray_400"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/gray_400"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/change_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/change_password_confirm_input"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/spacing_3"
                    android:paddingBottom="@dimen/spacing_3"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/text_base"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/change_password_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_12"
                android:text="@string/change_password_submit"
                android:textAllCaps="false"
                android:textSize="@dimen/text_lg"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/spacing_6"
                app:backgroundTint="@color/base_600"
                app:cornerRadius="@dimen/spacing_2"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="textEnd"
                app:iconTint="@color/white" />
        </LinearLayout>

        <!-- Hints -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:background="@drawable/bg_benefits_card"
            android:orientation="vertical"
            android:padding="@dimen/spacing_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_3"
                android:text="@string/change_password_requirements"
                android:textColor="@color/base_700"
                android:textSize="@dimen/text_base"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_1"
                android:text="@string/change_password_8_chars"
                android:textColor="@color/base_800"
                android:textSize="@dimen/text_sm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_1"
                android:text="@string/change_password_upper"
                android:textColor="@color/base_800"
                android:textSize="@dimen/text_sm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_1"
                android:text="@string/change_password_number"
                android:textColor="@color/base_800"
                android:textSize="@dimen/text_sm" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>