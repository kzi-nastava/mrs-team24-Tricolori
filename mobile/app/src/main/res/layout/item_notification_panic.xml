<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_panic_item"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:minHeight="80dp">

    <!-- Red left accent stripe -->
    <View
        android:id="@+id/view_unread_stripe"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="#DC2626"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Unread dot indicator -->
    <View
        android:id="@+id/view_unread_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/dot_red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_unread_stripe"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="6dp" />

    <!-- Pulsing red icon circle -->
    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_icon_circle_red"
        app:layout_constraintStart_toEndOf="@id/view_unread_dot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/iv_notif_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_warning"
            app:tint="@color/white"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <!-- PANIC badge -->
    <TextView
        android:id="@+id/tv_panic_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANIC"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_badge_red"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintStart_toEndOf="@id/fl_icon"
        app:layout_constraintTop_toTopOf="@id/fl_icon"
        android:layout_marginStart="12dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_notif_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#7F1D1D"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/fl_icon"
        app:layout_constraintEnd_toStartOf="@id/tv_notif_time"
        app:layout_constraintTop_toBottomOf="@id/tv_panic_badge"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        tools:text="EMERGENCY PANIC ALERT" />

    <!-- Time -->
    <TextView
        android:id="@+id/tv_notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#B91C1C"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_notif_title"
        tools:text="Just now" />

    <!-- Body content -->
    <TextView
        android:id="@+id/tv_notif_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#991B1B"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_notif_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_title"
        tools:text="Passenger triggered panic during ride." />

    <!-- Ride ID badge -->
    <TextView
        android:id="@+id/tv_notif_ride_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_badge_red_outline"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#B91C1C"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tv_notif_title"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_content"
        tools:text="Ride #42"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>