<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:minHeight="72dp">

    <!-- Unread left stripe -->
    <View
        android:id="@+id/view_unread_stripe"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="#14B8A6"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Unread dot indicator -->
    <View
        android:id="@+id/view_unread_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/dot_teal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_unread_stripe"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp" />

    <!-- Icon container -->
    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_icon_circle"
        app:layout_constraintStart_toEndOf="@id/view_unread_dot"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/iv_notif_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_notification"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_notif_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/fl_icon"
        app:layout_constraintEnd_toStartOf="@id/tv_notif_time"
        app:layout_constraintTop_toTopOf="@id/fl_icon"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        tools:text="Ride is starting" />

    <!-- Time -->
    <TextView
        android:id="@+id/tv_notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#9CA3AF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_notif_title"
        tools:text="2m ago" />

    <!-- Body content -->
    <TextView
        android:id="@+id/tv_notif_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#4B5563"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/tv_notif_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_title"
        tools:text="Your driver is on the way and will arrive in 5 minutes." />

    <!-- Ride ID badge -->
    <TextView
        android:id="@+id/tv_notif_ride_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_badge_gray"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="11sp"
        android:textColor="#6B7280"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tv_notif_title"
        app:layout_constraintTop_toBottomOf="@id/tv_notif_content"
        tools:text="Ride #42"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>