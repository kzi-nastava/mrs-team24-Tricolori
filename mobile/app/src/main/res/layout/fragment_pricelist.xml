<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Price per Kilometer Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Icon with circular background -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_icon_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price per Kilometer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_800"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/gray_50"
                    app:boxStrokeColor="@color/base_500"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPricePerKm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="120"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/gray_900"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Start Prices Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Icon with circular background -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_icon_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Prices"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_800"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- Standard -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/gray_50"
                    app:boxStrokeColor="@color/base_500"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStandardPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="180"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/gray_900"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Luxury -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luxury"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/gray_50"
                    app:boxStrokeColor="@color/base_500"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLuxuryPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="200"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/gray_900"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Van -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Van"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/gray_50"
                    app:boxStrokeColor="@color/base_500"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVanPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="210"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/gray_900"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All prices are calculated in RSD - Serbian Dinars."
            android:textSize="12sp"
            android:textColor="@color/gray_400"
            android:layout_marginBottom="16dp"
            android:layout_gravity="start"/>

        <!-- Save Button with inline styling -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/base_700">

            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save changes"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:stateListAnimator="@null"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>