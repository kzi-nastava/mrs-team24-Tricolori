<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ── Header row ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_clear_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear All"
                android:textColor="#DC2626"
                android:backgroundTint="@android:color/transparent"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Button
                android:id="@+id/btn_mark_all_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark all read"
                android:textColor="#0D9488"
                android:backgroundTint="@android:color/transparent"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

        <!-- Sub-title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay updated on ride requests, earnings, and alerts"
            android:textColor="#6B7280"
            android:textSize="13sp"
            android:layout_marginBottom="16dp" />

        <!-- ── Stats bar ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_stats_bar"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Unread pill -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/dot_teal"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_unread_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0F766E"
                    android:textStyle="bold"
                    tools:text="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" unread"
                    android:textColor="#374151"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Read pill -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/dot_gray"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_read_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#374151"
                    android:textStyle="bold"
                    tools:text="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" read"
                    android:textColor="#374151"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="#D1D5DB"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#6B7280"
                android:textSize="13sp"
                tools:text="13 total" />

            <!-- Filter toggle -->
            <Button
                android:id="@+id/btn_toggle_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unread Only"
                android:textSize="12sp"
                android:textColor="#374151"
                android:backgroundTint="@android:color/transparent"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

        <!-- ── Loading spinner ── -->
        <!-- FIX: removed invalid android:layout_marginStart="auto" and
             android:layout_marginEnd="auto" — use layout_gravity instead -->
        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:indeterminateTint="#14B8A6"
            android:visibility="gone" />

        <!-- ── Admin panic section (top-pinned, admin-only) ── -->
        <LinearLayout
            android:id="@+id/panic_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    app:tint="#DC2626"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PANIC ALERTS — Immediate Action Required"
                    android:textColor="#DC2626"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_panic_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:background="@drawable/bg_panic_section"
                android:clipToPadding="false" />

        </LinearLayout>

        <!-- ── Regular notifications list ── -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@drawable/bg_card_outlined"
            android:clipToPadding="false"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- ── Empty state ── -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="48dp"
            android:paddingBottom="48dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_notification"
                app:tint="#D1D5DB"
                android:layout_marginBottom="12dp"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No notifications yet"
                android:textColor="#6B7280"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We'll notify you about ride requests and updates"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>