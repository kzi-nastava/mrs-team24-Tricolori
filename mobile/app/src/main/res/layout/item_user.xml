<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_3"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_4">

        <!-- Row 1: ID + Status badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUserId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/block_result_item_id"
                android:textColor="@color/dark_700"
                android:textSize="@dimen/text_xs"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_3"
                android:paddingEnd="@dimen/spacing_3"
                android:paddingTop="@dimen/spacing_1"
                android:paddingBottom="@dimen/spacing_1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_xs"
                android:textStyle="bold"
                android:background="@drawable/bg_status_badge" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_3"
            android:layout_marginBottom="@dimen/spacing_3"
            android:background="@color/gray_100" />

        <!-- Row 2: Full name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_2">

            <TextView
                android:layout_width="@dimen/spacing_24"
                android:layout_height="wrap_content"
                android:text="@string/block_result_item_name"
                android:textColor="@color/gray_500"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/block_result_item_name_example"
                android:textColor="@color/gray_800"
                android:textSize="@dimen/text_sm"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Row 3: Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_2">

            <TextView
                android:layout_width="@dimen/spacing_24"
                android:layout_height="wrap_content"
                android:text="@string/block_result_item_email"
                android:textColor="@color/gray_500"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/block_result_item_email_example"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/text_sm"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Row 4: Registration date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/spacing_24"
                android:layout_height="wrap_content"
                android:text="@string/block_result_item_registration"
                android:textColor="@color/gray_500"
                android:textSize="@dimen/text_xs" />

            <TextView
                android:id="@+id/tvRegistrationDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/block_result_item_registration_example"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/text_sm" />
        </LinearLayout>

        <!-- Change status button -->
        <Button
            android:id="@+id/btnChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_4"
            android:paddingTop="@dimen/spacing_2"
            android:paddingBottom="@dimen/spacing_2"
            android:textSize="@dimen/text_sm"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_block"
            android:text="@string/block_result_item_change_status_block"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
