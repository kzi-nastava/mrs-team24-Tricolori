<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100">

    <!-- MAP (full background) -->
    <org.osmdroid.views.MapView
        android:id="@+id/supervise_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Live Tracking Badge -->
    <LinearLayout
        android:id="@+id/live_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_info"
        android:padding="10dp"
        android:elevation="6dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_circle_green"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Tracking"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updates every 5s"
                android:textSize="11sp"
                android:textColor="@color/gray_600" />
        </LinearLayout>
    </LinearLayout>

    <!-- BOTTOM SHEET PANEL -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottom_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_top"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Single required direct child for NestedScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- DRIVER LIST PANEL -->
            <LinearLayout
                android:id="@+id/driver_list_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ride Supervision"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900" />

                    <!-- Active rides pill -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_teal_pill"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active: "
                            android:textSize="12sp"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/active_rides_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitor active rides and driver status in real-time"
                    android:textSize="12sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="12dp" />

                <!-- Search -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Driver"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_input"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/search_input"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Enter driver name..."
                        android:textSize="14sp"
                        android:inputType="text"
                        android:maxLines="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_route"
                        android:tint="@color/gray_400"
                        android:contentDescription="Search" />
                </LinearLayout>

                <!-- Driver List Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Drivers"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_700"
                    android:layout_marginBottom="8dp" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/empty_state_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_vehicle"
                        android:tint="@color/gray_400"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="No drivers" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No active rides at the moment"
                        android:textSize="13sp"
                        android:textColor="@color/gray_500"
                        android:gravity="center" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/driver_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <!-- DRIVER DETAIL PANEL -->
            <LinearLayout
                android:id="@+id/driver_detail_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <!-- Header with Back -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_selector"
                        android:src="@drawable/ic_arrow_right"
                        android:rotation="180"
                        android:contentDescription="Back"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ride Supervision"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900" />
                </LinearLayout>

                <!-- Driver Info Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_passenger_card"
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/circle_icon_background"
                        android:backgroundTint="#14b8a6"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_person"
                            android:tint="@color/white"
                            android:contentDescription="Driver" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detail_driver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driver Name"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_900" />

                        <TextView
                            android:id="@+id/detail_vehicle_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicle"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600" />

                        <TextView
                            android:id="@+id/detail_license_plate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plate"
                            android:textSize="11sp"
                            android:textColor="@color/gray_500" />
                    </LinearLayout>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/bg_circle_green" />
                </LinearLayout>

                <!-- Route Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_info"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            android:tint="#14b8a6"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Pickup" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pickup"
                                android:textSize="11sp"
                                android:textColor="@color/gray_500" />

                            <TextView
                                android:id="@+id/detail_pickup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_900" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            android:tint="#ef4444"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Destination" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Destination"
                                android:textSize="11sp"
                                android:textColor="@color/gray_500" />

                            <TextView
                                android:id="@+id/detail_destination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="—"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_900" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Info Grid (2x3) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_info"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginEnd="4dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Ride ID" android:textSize="11sp" android:textColor="@color/gray_500" />
                            <TextView android:id="@+id/detail_ride_id" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="—"
                                android:textSize="13sp" android:textStyle="bold" android:textColor="@color/gray_900" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_info"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginStart="4dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Passenger" android:textSize="11sp" android:textColor="@color/gray_500" />
                            <TextView android:id="@+id/detail_passenger" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="—"
                                android:textSize="13sp" android:textStyle="bold" android:textColor="@color/gray_900"
                                android:ellipsize="end" android:maxLines="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_info"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginEnd="4dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Departure" android:textSize="11sp" android:textColor="@color/gray_500" />
                            <TextView android:id="@+id/detail_departure" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="—"
                                android:textSize="13sp" android:textStyle="bold" android:textColor="@color/gray_900" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_info"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginStart="4dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Est. Arrival" android:textSize="11sp" android:textColor="@color/gray_500" />
                            <TextView android:id="@+id/detail_arrival" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="—"
                                android:textSize="13sp" android:textStyle="bold" android:textColor="@color/gray_900" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_info"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginEnd="4dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Distance" android:textSize="11sp" android:textColor="@color/gray_500" />
                            <TextView android:id="@+id/detail_distance" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="—"
                                android:textSize="13sp" android:textStyle="bold" android:textColor="@color/gray_900" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_info"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginStart="4dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Price" android:textSize="11sp" android:textColor="@color/gray_500" />
                            <TextView android:id="@+id/detail_price" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="—"
                                android:textSize="13sp" android:textStyle="bold" android:textColor="@color/gray_900" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Progress Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_info"
                    android:padding="14dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Trip Progress"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_700" />

                        <TextView
                            android:id="@+id/detail_progress_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#14b8a6" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/detail_progress_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_green_pill"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_circle_green"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Progress"
                            android:textSize="12sp"
                            android:textColor="#166534" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>